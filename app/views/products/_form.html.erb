<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@product.errors.count, "error") %>.
    </div>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <div class="field">
    <%= f.label :image_id %>
    <br>
    <%#= f.select :category_id, (1..2) %>
    <%= select("product", "image_id", Image.all.collect { |p| [ p.image, p.id ] }, selected: f.object.image_id ) %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 10, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  
  <div class="field">
    <%= f.label :category %>
    <br>
    <%#= f.select :category_id, (1..2) %>
    <%= select("product", "category_id", Category.all.collect { |p| [ p.name, p.id ] }, selected: f.object.category_id ) %>
  </div>
  <div class="actions">
    <%= f.submit 'submit', :class => 'btn btn-success' %>
  </div>
<% end %>
