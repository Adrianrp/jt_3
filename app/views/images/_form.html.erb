<%= form_for(@image) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
    <div class="alert alert-error">
      <p><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</p>
      </div>
      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %>
    <br>
    <%#= f.select :category_id, (1..2) %>
    <%= select("image", "product_id", Product.all.collect { |p| [ p.title, p.id ] }, selected: f.object.product_id ) %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'create', :class => 'btn btn-success' %>
  </div>
<% end %>
