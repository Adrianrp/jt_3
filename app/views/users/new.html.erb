<% provide(:title, 'Sign up') %>
<%= render 'layouts/subnav' %>

<div class="boxWrap noLine">
	<div id="box-shadow-custom" class="productBox2">
<h2>Sign up</h2>

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>

<div class="clearfix">
<%= f.submit "Create account", class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>